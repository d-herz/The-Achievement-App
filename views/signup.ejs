<main>
    <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>
    <% } %>
    <form action="/signup" method="POST" class="form signup">
        <input type="email" name="email" placeholder="Email" class="input email" autocomplete="username">
        <input type="password" name="password" placeholder="Password" class="input password" autocomplete="new-password">
        <input type="password" name="confirmPassword" placeholder="Confirm Password" class="input confirm-password" autocomplete="confirm-password">
        <input type="submit" class="btn submit" value="Sign Up">
        <span class="auth-nav">
            Already have an account? <a href="/login" class="link login">Login</a>
        </span>
    </form>
</main>